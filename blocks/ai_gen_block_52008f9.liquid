{% doc %}
  @prompt
    media grid but add body text 
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-media-grid-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
  }

  .ai-media-grid-container-{{ ai_gen_id }} {
    max-width: 1600px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-media-grid-header-{{ ai_gen_id }} {
    text-align: {{ block.settings.text_alignment }};
    margin-bottom: {{ block.settings.content_spacing }}px;
  }

  .ai-media-grid-title-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    font-weight: 700;
    margin: 0 0 16px;
    line-height: 1.2;
  }

  .ai-media-grid-description-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.6;
    margin: 0;
    max-width: 800px;
    {% if block.settings.text_alignment == 'center' %}
      margin-left: auto;
      margin-right: auto;
    {% endif %}
  }

  .ai-media-grid-items-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.grid_gap }}px;
    margin-top: {{ block.settings.content_spacing }}px;
  }

  .ai-media-grid-item-{{ ai_gen_id }} {
    background-color: {{ block.settings.item_background_color }};
    border-radius: {{ block.settings.item_border_radius }}px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    {% if block.settings.enable_hover_effect %}
      cursor: pointer;
    {% endif %}
  }

  {% if block.settings.enable_hover_effect %}
    .ai-media-grid-item-{{ ai_gen_id }}:hover {
      transform: translateY(-4px);
      box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
    }
  {% endif %}

  .ai-media-grid-media-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    aspect-ratio: {{ block.settings.image_aspect_ratio }};
    overflow: hidden;
  }

  .ai-media-grid-media-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  {% if block.settings.enable_hover_effect %}
    .ai-media-grid-item-{{ ai_gen_id }}:hover .ai-media-grid-media-{{ ai_gen_id }} img {
      transform: scale(1.05);
    }
  {% endif %}

  .ai-media-grid-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-media-grid-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-media-grid-content-{{ ai_gen_id }} {
    padding: {{ block.settings.item_padding }}px;
  }

  .ai-media-grid-item-title-{{ ai_gen_id }} {
    color: {{ block.settings.item_title_color }};
    font-size: {{ block.settings.item_title_size }}px;
    font-weight: 600;
    margin: 0 0 12px;
    line-height: 1.3;
  }

  .ai-media-grid-item-text-{{ ai_gen_id }} {
    color: {{ block.settings.item_text_color }};
    font-size: {{ block.settings.item_text_size }}px;
    line-height: 1.5;
    margin: 0;
  }

  .ai-media-grid-item-link-{{ ai_gen_id }} {
    text-decoration: none;
    color: inherit;
    display: block;
  }

  @media screen and (max-width: 990px) {
    .ai-media-grid-items-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_tablet }}, 1fr);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-media-grid-items-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
    }

    .ai-media-grid-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }

    .ai-media-grid-description-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.9 }}px;
    }

    .ai-media-grid-content-{{ ai_gen_id }} {
      padding: {{ block.settings.item_padding | times: 0.8 }}px;
    }
  }
{% endstyle %}

<div class="ai-media-grid-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-media-grid-container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank or block.settings.description != blank %}
      <div class="ai-media-grid-header-{{ ai_gen_id }}">
        {% if block.settings.heading != blank %}
          <h2 class="ai-media-grid-title-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
        {% endif %}
        {% if block.settings.description != blank %}
          <div class="ai-media-grid-description-{{ ai_gen_id }}">{{ block.settings.description }}</div>
        {% endif %}
      </div>
    {% endif %}

    <div class="ai-media-grid-items-{{ ai_gen_id }}">
      {% for i in (1..6) %}
        {% liquid
          assign image_key = 'item_' | append: i | append: '_image'
          assign title_key = 'item_' | append: i | append: '_title'
          assign text_key = 'item_' | append: i | append: '_text'
          assign link_key = 'item_' | append: i | append: '_link'

          assign item_image = block.settings[image_key]
          assign item_title = block.settings[title_key]
          assign item_text = block.settings[text_key]
          assign item_link = block.settings[link_key]
        %}

        {% if item_image != blank or item_title != blank or item_text != blank %}
          <div class="ai-media-grid-item-{{ ai_gen_id }}">
            {% if item_link != blank %}
              <a href="{{ item_link }}" class="ai-media-grid-item-link-{{ ai_gen_id }}">
            {% endif %}

            <div class="ai-media-grid-media-{{ ai_gen_id }}">
              {% if item_image != blank %}
                <img
                  src="{{ item_image | image_url: width: 800 }}"
                  alt="{{ item_image.alt | escape }}"
                  loading="lazy"
                  width="{{ item_image.width }}"
                  height="{{ item_image.height }}"
                >
              {% else %}
                <div class="ai-media-grid-placeholder-{{ ai_gen_id }}">
                  {{ 'image' | placeholder_svg_tag }}
                </div>
              {% endif %}
            </div>

            {% if item_title != blank or item_text != blank %}
              <div class="ai-media-grid-content-{{ ai_gen_id }}">
                {% if item_title != blank %}
                  <h3 class="ai-media-grid-item-title-{{ ai_gen_id }}">{{ item_title }}</h3>
                {% endif %}
                {% if item_text != blank %}
                  <div class="ai-media-grid-item-text-{{ ai_gen_id }}">{{ item_text }}</div>
                {% endif %}
              </div>
            {% endif %}

            {% if item_link != blank %}
              </a>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

