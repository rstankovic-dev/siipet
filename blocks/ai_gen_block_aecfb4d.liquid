{% doc %}
  @prompt
    media grid but with headline and body text
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-media-grid-{{ ai_gen_id }} {
    padding: 40px 20px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-media-grid-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
  }

  .ai-media-grid-header-{{ ai_gen_id }} {
    text-align: {{ block.settings.text_alignment }};
    margin-bottom: 40px;
  }

  .ai-media-grid-headline-{{ ai_gen_id }} {
    font-family: {{ settings.heading_font.family }}, {{ settings.heading_font.fallback_families }};
    font-weight: {{ settings.heading_font.weight }};
    font-size: {{ block.settings.headline_size }}px;
    color: {{ block.settings.headline_color }};
    margin: 0 0 16px 0;
    line-height: 1.2;
    letter-spacing: {{ settings.heading_letter_spacing }}%;
    text-transform: {{ settings.heading_text_transform }};
  }

  .ai-media-grid-body-{{ ai_gen_id }} {
    font-family: {{ settings.text_font.family }}, {{ settings.text_font.fallback_families }};
    font-weight: {{ settings.text_font.weight }};
    font-size: {{ block.settings.body_size }}px;
    color: {{ block.settings.body_color }};
    margin: 0;
    line-height: 1.5;
    letter-spacing: {{ settings.text_font_letter_spacing }}%;
  }

  .ai-media-grid-items-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.grid_gap }}px;
  }

  .ai-media-grid-item-{{ ai_gen_id }} {
    position: relative;
    border-radius: {{ settings.block_border_radius }}px;
    overflow: hidden;
    background-color: {{ block.settings.item_background_color }};
    box-shadow: 
      {{ settings.block_shadow_horizontal_offset }}px 
      {{ settings.block_shadow_vertical_offset }}px 
      {{ settings.block_shadow_blur }}px 
      rgba(0, 0, 0, {{ settings.block_shadow_opacity | divided_by: 100.0 }});
  }

  .ai-media-grid-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    aspect-ratio: {{ block.settings.image_aspect_ratio }};
    overflow: hidden;
  }

  .ai-media-grid-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  {% if settings.zoom_image_on_hover %}
    .ai-media-grid-item-{{ ai_gen_id }}:hover .ai-media-grid-image-{{ ai_gen_id }} {
      transform: scale(1.05);
    }
  {% endif %}

  .ai-media-grid-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-media-grid-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-media-grid-content-{{ ai_gen_id }} {
    padding: {{ block.settings.content_padding }}px;
  }

  .ai-media-grid-item-title-{{ ai_gen_id }} {
    font-family: {{ settings.heading_font.family }}, {{ settings.heading_font.fallback_families }};
    font-weight: {{ settings.heading_font.weight }};
    font-size: {{ block.settings.item_title_size }}px;
    color: {{ block.settings.item_title_color }};
    margin: 0 0 8px 0;
    line-height: 1.3;
    letter-spacing: {{ settings.heading_letter_spacing }}%;
  }

  .ai-media-grid-item-text-{{ ai_gen_id }} {
    font-family: {{ settings.text_font.family }}, {{ settings.text_font.fallback_families }};
    font-weight: {{ settings.text_font.weight }};
    font-size: {{ block.settings.item_text_size }}px;
    color: {{ block.settings.item_text_color }};
    margin: 0;
    line-height: 1.4;
    letter-spacing: {{ settings.text_font_letter_spacing }}%;
  }

  .ai-media-grid-link-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
    text-decoration: none;
  }

  @media screen and (max-width: 749px) {
    .ai-media-grid-{{ ai_gen_id }} {
      padding: 30px 16px;
    }

    .ai-media-grid-header-{{ ai_gen_id }} {
      margin-bottom: 30px;
    }

    .ai-media-grid-headline-{{ ai_gen_id }} {
      font-size: {{ block.settings.headline_size | times: 0.8 }}px;
    }

    .ai-media-grid-body-{{ ai_gen_id }} {
      font-size: {{ settings.text_font_size_mobile }}px;
    }

    .ai-media-grid-items-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
      gap: {{ block.settings.grid_gap | times: 0.75 }}px;
    }

    .ai-media-grid-content-{{ ai_gen_id }} {
      padding: {{ block.settings.content_padding | times: 0.75 }}px;
    }

    .ai-media-grid-item-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.item_title_size | times: 0.9 }}px;
    }

    .ai-media-grid-item-text-{{ ai_gen_id }} {
      font-size: {{ settings.text_font_size_mobile }}px;
    }
  }

  @media screen and (min-width: 750px) and (max-width: 989px) {
    .ai-media-grid-items-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_tablet }}, 1fr);
    }
  }
{% endstyle %}

<div class="ai-media-grid-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-media-grid-container-{{ ai_gen_id }}">
    {% if block.settings.headline != blank or block.settings.body_text != blank %}
      <div class="ai-media-grid-header-{{ ai_gen_id }}">
        {% if block.settings.headline != blank %}
          <h2 class="ai-media-grid-headline-{{ ai_gen_id }}">{{ block.settings.headline }}</h2>
        {% endif %}
        {% if block.settings.body_text != blank %}
          <div class="ai-media-grid-body-{{ ai_gen_id }}">{{ block.settings.body_text }}</div>
        {% endif %}
      </div>
    {% endif %}

    <div class="ai-media-grid-items-{{ ai_gen_id }}">
      {% for i in (1..6) %}
        {% liquid
          assign image_key = 'image_' | append: i
          assign title_key = 'title_' | append: i
          assign text_key = 'text_' | append: i
          assign link_key = 'link_' | append: i
          
          assign item_image = block.settings[image_key]
          assign item_title = block.settings[title_key]
          assign item_text = block.settings[text_key]
          assign item_link = block.settings[link_key]
        %}

        {% if item_image != blank or item_title != blank or item_text != blank %}
          <div class="ai-media-grid-item-{{ ai_gen_id }}">
            {% if item_link != blank %}
              <a href="{{ item_link }}" class="ai-media-grid-link-{{ ai_gen_id }}" aria-label="{{ item_title | default: 'View item' }}"></a>
            {% endif %}

            <div class="ai-media-grid-image-wrapper-{{ ai_gen_id }}">
              {% if item_image != blank %}
                <img
                  src="{{ item_image | image_url: width: 600 }}"
                  alt="{{ item_image.alt | escape }}"
                  class="ai-media-grid-image-{{ ai_gen_id }}"
                  loading="lazy"
                  width="{{ item_image.width }}"
                  height="{{ item_image.height }}"
                >
              {% else %}
                <div class="ai-media-grid-placeholder-{{ ai_gen_id }}">
                  {{ 'image' | placeholder_svg_tag }}
                </div>
              {% endif %}
            </div>

            {% if item_title != blank or item_text != blank %}
              <div class="ai-media-grid-content-{{ ai_gen_id }}">
                {% if item_title != blank %}
                  <h3 class="ai-media-grid-item-title-{{ ai_gen_id }}">{{ item_title }}</h3>
                {% endif %}
                {% if item_text != blank %}
                  <div class="ai-media-grid-item-text-{{ ai_gen_id }}">{{ item_text }}</div>
                {% endif %}
              </div>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

