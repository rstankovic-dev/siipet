{% doc %}
  @prompt
    3x3 photo grid for product features , match side margins , edit to be 3x2
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-feature-grid-{{ ai_gen_id }} {
    width: 100%;
    max-width: {{ settings.page_width }}px;
    margin: 0 auto;
    padding: {{ block.settings.section_padding }}px;
  }

  .ai-feature-grid__container-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    grid-template-rows: repeat(2, 1fr);
    gap: {{ block.settings.grid_gap }}px;
    width: 100%;
  }

  .ai-feature-grid__item-{{ ai_gen_id }} {
    position: relative;
    aspect-ratio: 1;
    border-radius: {{ block.settings.image_border_radius }}px;
    overflow: hidden;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-feature-grid__image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  {% if block.settings.hover_effect == 'zoom' %}
    .ai-feature-grid__item-{{ ai_gen_id }}:hover .ai-feature-grid__image-{{ ai_gen_id }} {
      transform: scale(1.05);
    }
  {% endif %}

  .ai-feature-grid__placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f8f8f8;
    position: relative;
  }

  .ai-feature-grid__placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-feature-grid__overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      to bottom,
      transparent 0%,
      rgba(0, 0, 0, {{ block.settings.overlay_opacity | divided_by: 100.0 }}) 100%
    );
    display: flex;
    align-items: flex-end;
    padding: 20px;
    opacity: {% if block.settings.show_overlay_on_hover %}0{% else %}1{% endif %};
    transition: opacity 0.3s ease;
  }

  {% if block.settings.show_overlay_on_hover %}
    .ai-feature-grid__item-{{ ai_gen_id }}:hover .ai-feature-grid__overlay-{{ ai_gen_id }} {
      opacity: 1;
    }
  {% endif %}

  .ai-feature-grid__content-{{ ai_gen_id }} {
    color: {{ block.settings.overlay_text_color }};
    text-align: {{ block.settings.text_alignment }};
    width: 100%;
  }

  .ai-feature-grid__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_font_size }}px;
    font-weight: 600;
    margin: 0 0 5px 0;
    line-height: 1.2;
  }

  .ai-feature-grid__description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_font_size }}px;
    margin: 0;
    line-height: 1.3;
    opacity: 0.9;
  }

  .ai-feature-grid__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 10px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 12px;
    color: #999;
    text-align: center;
    pointer-events: none;
  }

  @media screen and (max-width: 1199px) {
    .ai-feature-grid-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding }}px 40px;
    }
  }

  @media screen and (max-width: 749px) {
    .ai-feature-grid-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding }}px 20px;
    }

    .ai-feature-grid__container-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
      grid-template-rows: auto;
      gap: {{ block.settings.grid_gap | times: 0.7 }}px;
    }

    .ai-feature-grid__overlay-{{ ai_gen_id }} {
      padding: 15px;
    }

    .ai-feature-grid__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_font_size | times: 0.9 }}px;
    }

    .ai-feature-grid__description-{{ ai_gen_id }} {
      font-size: {{ block.settings.description_font_size | times: 0.9 }}px;
    }
  }

  @media screen and (max-width: 480px) {
    .ai-feature-grid-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding }}px 15px;
    }

    .ai-feature-grid__overlay-{{ ai_gen_id }} {
      padding: 12px;
    }
  }
{% endstyle %}

<div class="ai-feature-grid-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-feature-grid__container-{{ ai_gen_id }}">
    {% for i in (1..6) %}
      {% liquid
        assign image_key = 'image_' | append: i
        assign title_key = 'title_' | append: i
        assign description_key = 'description_' | append: i
        assign link_key = 'link_' | append: i

        assign image = block.settings[image_key]
        assign title = block.settings[title_key]
        assign description = block.settings[description_key]
        assign link = block.settings[link_key]
      %}

      <div class="ai-feature-grid__item-{{ ai_gen_id }}">
        {% if link != blank %}
          <a href="{{ link }}" style="display: block; width: 100%; height: 100%;">
        {% endif %}

        {% if image %}
          <img
            src="{{ image | image_url: width: 600 }}"
            alt="{{ image.alt | escape }}"
            class="ai-feature-grid__image-{{ ai_gen_id }}"
            loading="lazy"
            width="{{ image.width }}"
            height="{{ image.height }}"
          >
        {% else %}
          <div class="ai-feature-grid__placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
            <div class="ai-feature-grid__empty-state-{{ ai_gen_id }}">
              Add image {{ i }}
            </div>
          </div>
        {% endif %}

        {% if title != blank or description != blank %}
          <div class="ai-feature-grid__overlay-{{ ai_gen_id }}">
            <div class="ai-feature-grid__content-{{ ai_gen_id }}">
              {% if title != blank %}
                <h3 class="ai-feature-grid__title-{{ ai_gen_id }}">{{ title }}</h3>
              {% endif %}
              {% if description != blank %}
                <p class="ai-feature-grid__description-{{ ai_gen_id }}">{{ description }}</p>
              {% endif %}
            </div>
          </div>
        {% endif %}

        {% if link != blank %}
          </a>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</div>

