{% doc %}
  @prompt
    multi-column
    column should be block
    section has heading subheading body text
    Block has media (image or video) should adjust size and border round
    , border radius should be 0% ~ 100%
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-multi-column-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-multi-column-container-{{ ai_gen_id }} {
    max-width: 1600px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-multi-column-header-{{ ai_gen_id }} {
    text-align: {{ block.settings.text_alignment }};
    margin-bottom: {{ block.settings.header_spacing }}px;
  }

  .ai-multi-column-heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    font-weight: 600;
    margin: 0 0 16px;
    line-height: 1.2;
  }

  .ai-multi-column-subheading-{{ ai_gen_id }} {
    color: {{ block.settings.subheading_color }};
    font-size: {{ block.settings.subheading_size }}px;
    margin: 0 0 16px;
    line-height: 1.4;
  }

  .ai-multi-column-body-{{ ai_gen_id }} {
    color: {{ block.settings.body_text_color }};
    font-size: {{ block.settings.body_text_size }}px;
    margin: 0;
    line-height: 1.6;
  }

  .ai-multi-column-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.column_gap }}px;
    margin-top: {{ block.settings.content_spacing }}px;
  }

  .ai-multi-column-item-{{ ai_gen_id }} {
    background-color: {{ block.settings.column_background_color }};
    border-radius: {{ block.settings.column_border_radius }}%;
    padding: {{ block.settings.column_padding }}px;
    text-align: {{ block.settings.column_text_alignment }};
    box-shadow: 0 {{ block.settings.shadow_vertical_offset }}px {{ block.settings.shadow_blur }}px rgba(0, 0, 0, {{ block.settings.shadow_opacity | divided_by: 100.0 }});
  }

  .ai-multi-column-media-{{ ai_gen_id }} {
    margin-bottom: {{ block.settings.media_spacing }}px;
    border-radius: {{ block.settings.media_border_radius }}%;
    overflow: hidden;
  }

  .ai-multi-column-image-{{ ai_gen_id }} {
    width: 100%;
    height: {{ block.settings.media_height }}px;
    object-fit: cover;
    display: block;
  }

  .ai-multi-column-video-{{ ai_gen_id }} {
    width: 100%;
    height: {{ block.settings.media_height }}px;
    object-fit: cover;
    border-radius: {{ block.settings.media_border_radius }}%;
  }

  .ai-multi-column-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: {{ block.settings.media_height }}px;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: {{ block.settings.media_border_radius }}%;
  }

  .ai-multi-column-placeholder-{{ ai_gen_id }} svg {
    width: 60px;
    height: 60px;
    opacity: 0.5;
  }

  .ai-multi-column-item-title-{{ ai_gen_id }} {
    color: {{ block.settings.column_title_color }};
    font-size: {{ block.settings.column_title_size }}px;
    font-weight: 600;
    margin: 0 0 12px;
    line-height: 1.3;
  }

  .ai-multi-column-item-text-{{ ai_gen_id }} {
    color: {{ block.settings.column_text_color }};
    font-size: {{ block.settings.column_text_size }}px;
    margin: 0;
    line-height: 1.5;
  }

  @media screen and (max-width: 768px) {
    .ai-multi-column-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
      gap: {{ block.settings.column_gap | times: 0.75 }}px;
    }

    .ai-multi-column-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.85 }}px;
    }

    .ai-multi-column-subheading-{{ ai_gen_id }} {
      font-size: {{ block.settings.subheading_size | times: 0.9 }}px;
    }

    .ai-multi-column-body-{{ ai_gen_id }} {
      font-size: {{ block.settings.body_text_size | times: 0.9 }}px;
    }

    .ai-multi-column-item-{{ ai_gen_id }} {
      padding: {{ block.settings.column_padding | times: 0.75 }}px;
    }

    .ai-multi-column-media-{{ ai_gen_id }} {
      margin-bottom: {{ block.settings.media_spacing | times: 0.75 }}px;
    }

    .ai-multi-column-image-{{ ai_gen_id }},
    .ai-multi-column-video-{{ ai_gen_id }},
    .ai-multi-column-placeholder-{{ ai_gen_id }} {
      height: {{ block.settings.media_height | times: 0.8 }}px;
    }
  }

  @media screen and (max-width: 480px) {
    .ai-multi-column-container-{{ ai_gen_id }} {
      padding: 0 16px;
    }

    .ai-multi-column-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
    }
  }
{% endstyle %}

<div class="ai-multi-column-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-multi-column-container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank or block.settings.subheading != blank or block.settings.body_text != blank %}
      <div class="ai-multi-column-header-{{ ai_gen_id }}">
        {% if block.settings.heading != blank %}
          <h2 class="ai-multi-column-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
        {% endif %}
        
        {% if block.settings.subheading != blank %}
          <div class="ai-multi-column-subheading-{{ ai_gen_id }}">{{ block.settings.subheading }}</div>
        {% endif %}
        
        {% if block.settings.body_text != blank %}
          <div class="ai-multi-column-body-{{ ai_gen_id }}">{{ block.settings.body_text }}</div>
        {% endif %}
      </div>
    {% endif %}

    <div class="ai-multi-column-grid-{{ ai_gen_id }}">
      {% for i in (1..6) %}
        {% liquid
          assign image_key = 'column_' | append: i | append: '_image'
          assign video_key = 'column_' | append: i | append: '_video'
          assign title_key = 'column_' | append: i | append: '_title'
          assign text_key = 'column_' | append: i | append: '_text'
          assign enabled_key = 'column_' | append: i | append: '_enabled'
          
          assign column_image = block.settings[image_key]
          assign column_video = block.settings[video_key]
          assign column_title = block.settings[title_key]
          assign column_text = block.settings[text_key]
          assign column_enabled = block.settings[enabled_key]
        %}

        {% if column_enabled %}
          <div class="ai-multi-column-item-{{ ai_gen_id }}">
            {% if column_video != blank %}
              <div class="ai-multi-column-media-{{ ai_gen_id }}">
                <video
                  class="ai-multi-column-video-{{ ai_gen_id }}"
                  autoplay
                  muted
                  loop
                  playsinline
                >
                  <source src="{{ column_video }}" type="video/mp4">
                </video>
              </div>
            {% elsif column_image != blank %}
              <div class="ai-multi-column-media-{{ ai_gen_id }}">
                <img
                  src="{{ column_image | image_url: width: 600 }}"
                  alt="{{ column_image.alt | escape }}"
                  class="ai-multi-column-image-{{ ai_gen_id }}"
                  loading="lazy"
                  width="{{ column_image.width }}"
                  height="{{ column_image.height }}"
                >
              </div>
            {% else %}
              <div class="ai-multi-column-media-{{ ai_gen_id }}">
                <div class="ai-multi-column-placeholder-{{ ai_gen_id }}">
                  {{ 'image' | placeholder_svg_tag }}
                </div>
              </div>
            {% endif %}

            {% if column_title != blank %}
              <h3 class="ai-multi-column-item-title-{{ ai_gen_id }}">{{ column_title }}</h3>
            {% endif %}

            {% if column_text != blank %}
              <div class="ai-multi-column-item-text-{{ ai_gen_id }}">{{ column_text }}</div>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

