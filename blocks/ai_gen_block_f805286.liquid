{% doc %}
  @prompt
    adjust default multi-column section.
    rounded medias and adjust media size
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-multi-column-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
  }

  .ai-multi-column__container-{{ ai_gen_id }} {
    max-width: 1600px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-multi-column__heading-{{ ai_gen_id }} {
    text-align: {{ block.settings.heading_alignment }};
    margin-bottom: {{ block.settings.heading_spacing }}px;
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    font-weight: 600;
  }

  .ai-multi-column__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.column_gap }}px;
    align-items: {{ block.settings.vertical_alignment }};
  }

  .ai-multi-column__item-{{ ai_gen_id }} {
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-multi-column__media-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    margin-bottom: {{ block.settings.content_spacing }}px;
    overflow: hidden;
    border-radius: {{ block.settings.media_border_radius }}px;
    background-color: #f4f4f4;
  }

  .ai-multi-column__media-{{ ai_gen_id }} {
    width: 100%;
    height: {{ block.settings.media_height }}px;
    object-fit: cover;
    display: block;
  }

  .ai-multi-column__media-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: {{ block.settings.media_height }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
  }

  .ai-multi-column__media-placeholder-{{ ai_gen_id }} svg {
    width: 60px;
    height: 60px;
    opacity: 0.3;
  }

  .ai-multi-column__content-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
  }

  .ai-multi-column__item-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.item_heading_size }}px;
    font-weight: 600;
    margin-bottom: {{ block.settings.item_heading_spacing }}px;
    color: {{ block.settings.item_heading_color }};
  }

  .ai-multi-column__text-{{ ai_gen_id }} {
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.5;
    margin-bottom: {{ block.settings.text_spacing }}px;
  }

  .ai-multi-column__button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 12px 24px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-weight: 500;
    transition: all 0.3s ease;
    border: 2px solid {{ block.settings.button_background }};
  }

  .ai-multi-column__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
    color: {{ block.settings.button_hover_text_color }};
    border-color: {{ block.settings.button_hover_background }};
  }

  @media screen and (max-width: 990px) {
    .ai-multi-column__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_tablet }}, 1fr);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-multi-column__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
      gap: {{ block.settings.column_gap | times: 0.75 }}px;
    }

    .ai-multi-column__media-{{ ai_gen_id }},
    .ai-multi-column__media-placeholder-{{ ai_gen_id }} {
      height: {{ block.settings.media_height | times: 0.8 }}px;
    }

    .ai-multi-column__container-{{ ai_gen_id }} {
      padding: 0 16px;
    }
  }
{% endstyle %}

<div class="ai-multi-column-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-multi-column__container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-multi-column__heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
    {% endif %}

    <div class="ai-multi-column__grid-{{ ai_gen_id }}">
      {% for i in (1..6) %}
        {% liquid
          assign image_key = 'image_' | append: i
          assign heading_key = 'heading_' | append: i
          assign text_key = 'text_' | append: i
          assign button_text_key = 'button_text_' | append: i
          assign button_link_key = 'button_link_' | append: i

          assign item_image = block.settings[image_key]
          assign item_heading = block.settings[heading_key]
          assign item_text = block.settings[text_key]
          assign item_button_text = block.settings[button_text_key]
          assign item_button_link = block.settings[button_link_key]
        %}

        {% if item_image != blank or item_heading != blank or item_text != blank %}
          <div class="ai-multi-column__item-{{ ai_gen_id }}">
            <div class="ai-multi-column__media-wrapper-{{ ai_gen_id }}">
              {% if item_image != blank %}
                <img
                  src="{{ item_image | image_url: width: 600 }}"
                  alt="{{ item_image.alt | escape }}"
                  class="ai-multi-column__media-{{ ai_gen_id }}"
                  loading="lazy"
                  width="{{ item_image.width }}"
                  height="{{ item_image.height }}"
                >
              {% else %}
                <div class="ai-multi-column__media-placeholder-{{ ai_gen_id }}">
                  {{ 'image' | placeholder_svg_tag }}
                </div>
              {% endif %}
            </div>

            <div class="ai-multi-column__content-{{ ai_gen_id }}">
              {% if item_heading != blank %}
                <h3 class="ai-multi-column__item-heading-{{ ai_gen_id }}">{{ item_heading }}</h3>
              {% endif %}

              {% if item_text != blank %}
                <div class="ai-multi-column__text-{{ ai_gen_id }}">{{ item_text }}</div>
              {% endif %}

              {% if item_button_text != blank and item_button_link != blank %}
                <a href="{{ item_button_link }}" class="ai-multi-column__button-{{ ai_gen_id }}">
                  {{ item_button_text }}
                </a>
              {% endif %}
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

