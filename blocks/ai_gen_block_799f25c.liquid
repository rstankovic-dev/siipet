{% doc %}
  @prompt
    3 column grid of images with headline & text overlay , make margins match the rest of the sections, make the side margins ajustable, can you change to 4 
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-image-grid-container-{{ ai_gen_id }} {
    margin-top: var(--section-vertical-spacing);
    margin-bottom: var(--section-vertical-spacing);
    padding-left: {{ block.settings.side_margin }}px;
    padding-right: {{ block.settings.side_margin }}px;
  }

  .ai-image-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: {{ block.settings.grid_gap }}px;
    width: 100%;
    max-width: var(--page-width);
    margin: 0 auto;
  }

  @media screen and (max-width: 749px) {
    .ai-image-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
      gap: {{ block.settings.grid_gap | times: 0.75 }}px;
    }
    
    .ai-image-grid-container-{{ ai_gen_id }} {
      padding-left: {{ block.settings.side_margin | times: 0.75 }}px;
      padding-right: {{ block.settings.side_margin | times: 0.75 }}px;
    }
  }

  .ai-image-grid-item-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
    border-radius: {{ block.settings.border_radius }}px;
    aspect-ratio: {{ block.settings.aspect_ratio }};
    background-color: #f4f4f4;
  }

  .ai-image-grid-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .ai-image-grid-item-{{ ai_gen_id }}:hover .ai-image-grid-image-{{ ai_gen_id }} {
    transform: scale({{ block.settings.hover_scale }});
  }

  .ai-image-grid-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
  }

  .ai-image-grid-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-image-grid-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      {{ block.settings.overlay_direction }},
      {{ block.settings.overlay_color | color_modify: 'alpha', block.settings.overlay_opacity }}
    );
    display: flex;
    flex-direction: column;
    justify-content: {{ block.settings.content_vertical_alignment }};
    align-items: {{ block.settings.content_horizontal_alignment }};
    padding: {{ block.settings.content_padding }}px;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-image-grid-headline-{{ ai_gen_id }} {
    color: {{ block.settings.headline_color }};
    font-size: {{ block.settings.headline_size }}px;
    font-weight: {{ block.settings.headline_weight }};
    margin: 0 0 {{ block.settings.text_spacing }}px 0;
    line-height: 1.2;
  }

  .ai-image-grid-text-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.4;
    margin: 0;
  }

  .ai-image-grid-link-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 2;
    text-decoration: none;
  }

  @media screen and (max-width: 749px) {
    .ai-image-grid-headline-{{ ai_gen_id }} {
      font-size: {{ block.settings.headline_size | times: 0.8 }}px;
    }
    
    .ai-image-grid-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.9 }}px;
    }
    
    .ai-image-grid-overlay-{{ ai_gen_id }} {
      padding: {{ block.settings.content_padding | times: 0.75 }}px;
    }
  }
{% endstyle %}

<div class="ai-image-grid-container-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-image-grid-{{ ai_gen_id }}">
    {% for i in (1..4) %}
      {% liquid
        assign image_key = 'image_' | append: i
        assign headline_key = 'headline_' | append: i
        assign text_key = 'text_' | append: i
        assign link_key = 'link_' | append: i
        
        assign image = block.settings[image_key]
        assign headline = block.settings[headline_key]
        assign text = block.settings[text_key]
        assign link = block.settings[link_key]
      %}
      
      <div class="ai-image-grid-item-{{ ai_gen_id }}">
        {% if link != blank %}
          <a href="{{ link }}" class="ai-image-grid-link-{{ ai_gen_id }}" aria-label="{{ headline | default: 'View more' }}"></a>
        {% endif %}
        
        {% if image %}
          <img
            src="{{ image | image_url: width: 800 }}"
            alt="{{ image.alt | escape }}"
            class="ai-image-grid-image-{{ ai_gen_id }}"
            loading="lazy"
            width="{{ image.width }}"
            height="{{ image.height }}"
          >
        {% else %}
          <div class="ai-image-grid-placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
          </div>
        {% endif %}
        
        {% if headline != blank or text != blank %}
          <div class="ai-image-grid-overlay-{{ ai_gen_id }}">
            {% if headline != blank %}
              <h3 class="ai-image-grid-headline-{{ ai_gen_id }}">{{ headline }}</h3>
            {% endif %}
            {% if text != blank %}
              <p class="ai-image-grid-text-{{ ai_gen_id }}">{{ text }}</p>
            {% endif %}
          </div>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</div>

